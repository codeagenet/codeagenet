<%- title @user.name %>
<% metatitle "Checkout my badges on CodeAge" if (me? @user) %>

<div class="span4">
  <%= render :partial => 'user', :locals => {user: @user} %>
</div>
<div class="span8">
  <h2 class="pull-left"><%= (me? @user) ? 'Your' : @user.nickname + '\'s' %> achievements</h2>
  <% if me? @user %>
      <div class="pull-right sharing">

        <span class='sb st_facebook_large' displayText='Facebook'></span>
        <span class='sb st_twitter_large' displayText='Tweet'></span>
      </div>
  <% end %>
  <div class="clearfix">

  </div>
  <% if @user.achievements_fetched_at.nil? && (me? @user) %>
    <div id="achievements_container" class="notready"></div>
  <% else %>
    <%= render :partial => 'achievements', :locals => {user: @user} %>
  <% end %>
</div>